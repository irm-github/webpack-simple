<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge, chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, minimum-scale=1, user-scalable=no">
    <link href="http://at.alicdn.com/t/font_3n1y2hvuscahsemi.css" rel="stylesheet">
    <script type="text/javascript">
      (function(isEffective){
        if (!isEffective) return ;

        const DRAFT_WIDTH = 750; //设计稿的设备像素宽，现为iPhone6的设备像素宽750px
        const SCALE = DRAFT_WIDTH / 100; //设置 100px = 1rem 的转换规则
        const dpr = window.devicePixelRatio;
        var changeRootFontsize = function(){
          /* 设定：480px <= deviceWidth <= 750px */
          var innerWidth = window.innerWidth * dpr;
          var deviceWidth = innerWidth>750 ? 750: (innerWidth<480?480:innerWidth);
          var htmlElem = document.documentElement;
          var body = document.getElementsByTagName('body')[0];
          htmlElem.style.fontSize = deviceWidth / SCALE + 'px';
          body.style.fontSize = '0.14rem';
          // if ((navigator.userAgent.match(/(phone|pad|pod|iPhone|iPod|ios|iPad|Android|Mobile|BlackBerry|IEMobile|MQQBrowser|JUC|Fennec|wOSBrowser|BrowserNG|WebOS|Symbian|Windows Phone)/i))) {
          //   /* Mobile or Tablet */
          //   htmlElem.style.fontSize = deviceWidth / SCALE + 'px';
          // }else {
          //   /* PC */
          //   htmlElem.style.fontSize = "100px";
          // }
        };
        if(document.addEventListener){
          document.addEventListener('DOMContentLoaded', function(){
            var vpMeta = document.documentElement.getElementsByTagName('meta')[1];
            vpMeta.setAttribute('content', 'width=device-width, initial-scale='+ 1/dpr +', maximum-scale='+ 1/dpr +', minimum-scale='+ 1/dpr +' user-scalable=0');
            changeRootFontsize();
          }, false);
        }
        window.onresize = function(){
          changeRootFontsize();
        }
      })(false);
    </script>
    <style>
      .container {
        padding: 20px !important;
        text-align: center;
      }
      .container img {
        width: 200px;
        margin-top: 100px;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <h1 class="title"> Hello Webpack </h1>
      <img src="<%= require('./src/assets/images/webpack.png') %>" alt="">
    </div>

  <script src="http://cdn.bootcss.com/jquery/3.2.1/jquery.min.js"></script>
  </body>
</html>
